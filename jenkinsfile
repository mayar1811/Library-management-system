pipeline {
    agent any
    environment {
        DOCKER_CREDENTIALS_ID = 'mayar-docker-hub-credentials'
        DOCKER_IMAGE = 'library_app'
        DOCKER_TAG = 'latest'
        DOCKER_HUB_REPO = 'library_management_system_V1' // Docker Hub username or organization
    }
    stages {
        stage('Build') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    // Log in to Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS_ID}") {
                        // Push Docker image to Docker Hub
                        docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push("${DOCKER_TAG}")
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo 'Pushing Docker Image to Docker Hub...'
                    // Log in to Docker Hub
                    withDockerRegistry([credentialsId: "${DOCKER_CREDENTIALS_ID}", url: 'https://index.docker.io/v1/']) {
                        // Debug: Print Docker login info
                        echo "Logging in to Docker Hub with credentials ID: ${DOCKER_CREDENTIALS_ID}"
                        
                        // Push the Docker image to Docker Hub
                        bat "docker push ${DOCKER_HUB_REPO}/${DOCKER_IMAGE}:${DOCKER_TAG}"
                    }
                }
            }
        }
    }
    post {
        always {
            // Clean up resources or notify stakeholders
            echo 'Cleaning up...'
        }
    }
}

